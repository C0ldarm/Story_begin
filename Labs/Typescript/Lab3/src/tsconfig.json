{
  "compilerOptions": {
    "types": ["node", "mocha"],
    "forceConsistentCasingInFileNames": true,
    "target": "es6",                       
    "module": "commonjs",                  
    "outDir": "./dist",                    
    "rootDir": "./",                       
    "strict": true,                        
    "skipLibCheck": true,                  
    "esModuleInterop": true                
  },
  "include": [
    "./*.ts",                              
    "./models/*.ts",                        
    "./services/*.ts",                      
    "./test/**/*.ts"                       
  ],
  "exclude": [
    "./dist"                                
  ]
}
